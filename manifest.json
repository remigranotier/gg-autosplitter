{
    "manifest_version": 3,
    "name": "GeoGuessr Autosplitter",
    "version": "0.1.0",
    "description": "Sends command to LiveSplit server",
    "icons": {
        "48": "icons/logo-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.geoguessr.com/*"
            ],
            "js": [
                "split.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "icon-setter.js"
        ],
        "type": "module"
    },
    "action": {
        "default_icon": "icons/logo-48.png",
        "default_title": "Geoguessr Autosplitter",
        "default_popup": "settings_menu/settings.html"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "firefox@gg-autosplitter.com"
        }
    }
}